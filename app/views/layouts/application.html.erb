<!DOCTYPE html>
<html>
<head>
<title>ContentPublishing</title>
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar  do %>
  <%= menu_group do %>
   <%= menu_item "Home", root_path %>
  <% end %>

  <%= menu_group :pull => :right do %>
    <%= render 'devise/menu/header_links' %>
  <% end %>

<% end %>

<% if flash[:error].present? %>
  <span class="alert alert-warning">
    <%= flash[:error] %>
   </span>
<% end %>

<div class="container">
  <%= yield %>
</div>
  </body>
</html>
